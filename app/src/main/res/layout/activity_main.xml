<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="9"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="5dp"
            android:layout_margin="3dp"
            android:src="@drawable/android_logo"
            />

        <TextView
            android:id="@+id/titleFirst"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Implicit Intents"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textStyle="italic"

            />

        <EditText
            android:id="@+id/edittext_uri"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="2"
            android:backgroundTint="@color/teal_700"
            />
        <Button
            android:id="@+id/button_uri"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="3"

            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:textColorHint="#5C5959"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Open Website"
            android:textStyle="bold"
            android:layout_margin="30dp"

            android:onClick="openWebsite"
            />
        <EditText
            android:id="@+id/edittext_loc"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="4"
            android:backgroundTint="@color/teal_700"
            />
        <Button
            android:id="@+id/button_loc"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="5"

            android:layout_weight="1"
            android:backgroundTint="#FF8F07"
            android:textColorHint="#5C5959"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Open Location"
            android:textStyle="bold"
            android:layout_margin="30dp"

            android:onClick="openLocation"
            />
        <EditText
            android:id="@+id/edittext_share"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="6"
            android:backgroundTint="@color/teal_700"
            />
        <Button
            android:id="@+id/button_share"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="7"

            android:layout_weight="1"
            android:backgroundTint="#FF4D07"
            android:textColorHint="#5C5959"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Share this Text"
            android:textStyle="bold"
            android:layout_margin="30dp"

            android:onClick="shareText"
            />
        <TextView
            android:id="@+id/signature"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="8"
            android:text="Frank Berrocal"
            android:textDirection="firstStrong"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textStyle="normal"
            android:textAlignment="viewEnd"
            android:padding="15dp"
            />

















    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>